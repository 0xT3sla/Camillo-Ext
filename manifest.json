{
    "manifest_version": 3,
    "name": "Camillo Extension",
    "version": "1.0",
    "description": "An extension to analyze the current URL.",
    "permissions": ["tabs", "activeTab"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "96" : "icons/icon96.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
        "96" : "icons/icon96.png"
    }
  }
  